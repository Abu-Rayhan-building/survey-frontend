{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "",
    "rootDir": "src",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
